<section
  class="container d-flex flex-column justify-content-center align-items-center"
  id="login"
>
  <div class="login-wrapper">

    <div class="text-center logo">
      <a href="/" class="logolink">
        <img
          src="/images/logo2.png"
          alt="logo"
          class="d-inline-block"
          width="100"
          height="100"
        />
      </a>
    </div>

    <div class="login-container">

      <p class="text-center">I'm an existing customer and would like to login.</p>

      <form method="post" class="text-center">

        <div class="d-flex flex-column">
          <input type="text" name="email" placeholder="Email address" />
          <input type="password" name="password" placeholder="Password" />
        </div>

        <div class="d-flex justify-content-between">

          <div class="remember">
            <input name="rememberme" type="checkbox" id="rememberme" />
            <label for="rememberme">Remember me</label>
          </div>

          <div class="lost-password">
            <a href="#">Lost Password?</a>
          </div>
        </div>

        <button
          type="submit"
          class="btn btn-outline-secondary py-2 px-5 mt-4"
        >Login</button>

        <div class="error mt-3">
          {{#if errorMessage}}
            <p>{{errorMessage}}</p>
          {{/if}}
        </div>

      </form>

      <div class="text-center mb-3">
        <p><strong>I'm a new customer and would like to register.</strong></p>
        <a
          href="/auth/signup"
          class="btn btn-outline-secondary py-2 px-4"
          id="create-account"
        >Create a New Account</a>
      </div>
    </div>
  </div>
</section>