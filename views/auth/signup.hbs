<section
  class="container d-flex flex-column justify-content-center align-items-center"
  id="signup"
>
  <div class="signup-wrapper">

    <div class="text-center logo">
      <a href="/" class="logolink">
        <img
          src="/images/logo2.png"
          alt="logo"
          class="d-inline-block"
          width="100"
          height="100"
        />
      </a>
    </div>

    <div class="signup-container">

      <p class="text-center">I'm a new customer and would like to register.</p>

      <form action="/auth/signup" method="post" class="text-center">

        <div class="d-flex flex-column">
          <input type="text" name="email" placeholder="Email address" />
          <input type="password" name="password" placeholder="Password" />
        </div>

        <button
          type="submit"
          class="btn btn-outline-secondary py-2 px-5 mt-5"
        >Register</button>

        <div class="error mt-3">
          {{#if errorMessage}}
            <p>{{errorMessage}}</p>
          {{/if}}
        </div>
      </form>

      <div class="text-center mb-3">
        <p><strong>I'm an existing customer and would like to login.</strong></p>
        <a href="/auth/login" class="btn btn-outline-secondary py-2 px-4">Login
          to Existing Account</a>
      </div>

    </div>
  </div>
</section>