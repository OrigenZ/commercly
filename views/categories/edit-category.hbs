<section class="container d-flex flex-column justify-content-center align-items-center" id="edit-category">
  
  <div class="edit-category-wrapper">
    <h2 class="text-center text-muted text-uppercase">Edit category</h2>

    <div class="edit-category-container">

      <form method="post" action="/categories/edit/{{category.id}}">

        <div class="d-flex flex-column">

          <label for="name">Name:</label>
          <input type="text" id="name" name="name" value="{{category.name}}" />

          <label for="">Description:</label>
          <textarea name="description" id="description" cols="30" rows="5">{{category.description}}</textarea>


          <button type="submit" class="btn btn-outline-secondary py-2 px-5 mt-4">Submit</button>

          <div class="error mt-3">
            {{#if errorMessage}}
            <p>{{errorMessage}}</p>
            {{/if}}
          </div>

      </form>

    </div>
  </div>
</section>