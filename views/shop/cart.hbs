<section id="cart" class="container">
    <div class="card">
        <div class="row">
            <div class="col-md-9 cart">


                <div class="title border-bottom">
                    <div class="row">
                        <div class="col">
                            <h4><b>Shopping Cart</b></h4>
                        </div>
                        <div class="col align-self-center text-right text-muted"> {{totalItems}} items</div>
                    </div>
                </div>

                {{#each products}}
                <div class="row border-bottom">
                    <div class="row items-list align-items-center">
                        <div class="col-2">
                            <img class="img-fluid" src="{{product.image.path}}" alt="{{product.name}}">
                        </div>
                        <div class="col">
                            <div class="row text-muted">{{product.name}}</div>
                            <div class="row">{{product.description}}</div>
                        </div>
                        <div class="col minus-plus"> <a href="/shop/cart/remove-item/{{product._id}}"><i
                                    class="fas fa-minus"></i></a><a class="border">{{quantity}}</a><a
                                href="/shop/cart/add-item/{{product._id}}"><i class="fas fa-plus"></i></a>

                        </div>
                        <div class="col d-flex justify-content-end "> <a href="/shop/cart/remove-line/{{product._id}}"
                                class=" close"><i class="fas fa-times"></i></a></div>
                        <div class="col-12 mt-5"> Total line: {{totalLine}} &euro;</div>
                    </div>
                </div>
                {{/each}}

                <div class="back-to-shop"><a href="#">&leftarrow;</a><span class="text-muted">Back to shop</span></div>
                <div>
                    <div class="row border-bottom  mt-5">
                        <h4><b>Billing address</b> </h4>
                    </div>
                    <form action="" method="post">
                        <input type="hidden" id="id" name="id" value="{{billing._id}}" />

                        <div>
                            <label for="firstName">First name *</label>
                            <input type="text" id="firstName" name="firstName" value="{{billing.firstName}}" />
                        </div>

                        <label for="lastName">Last name *</label>
                        <input type="text" id="lastName" name="lastName" value="{{billing.lastName}}" />

                        <label for="company">Company (optional)</label>
                        <input type="text" id="company" name="company" value="{{billing.company}}" />

                        <label for="country">Country / Region *</label>
                        <input type="text" id="country" name="country" value="{{billing.country}}" />

                        <label for="street">Street address *</label>
                        <input type="text" id="street" name="street" value="{{billing.street}}" />

                        <label for="zip">Postcode / ZIP *</label>
                        <input type="number" id="zip" name="zip" value="{{billing.zip}}" />

                        <label for="city">Town / City *</label>
                        <input type="text" id="city" name="city" value="{{billing.city}}" />

                        <label for="province">Province *</label>
                        <input type="text" id="province" name="province" value="{{billing.province}}" />

                        <label for="phone">Phone *</label>
                        <input type="text" id="phone" name="phone" value="{{billing.phone}}" />

                        <label for="email">Email address *</label>
                        <input type="email" id="email" name="email" value="{{billing.email}}" />

                        <button type="submit" class="btn btn-outline-secondary border-3">CHECKOUT</button>
                    </form>
                </div>
            </div>
            <div class="col-md-3 summary">
                <div>
                    <h5><b>Summary</b></h5>
                </div>
                <hr>
                <div class="row">
                    <div style="padding-left:0;">Total items: {{totalItems}} </div>
                    <div style="padding-left:0;">Price: {{totalPrice}} &euro;</div>
                </div>
                <form>
                    <p>SHIPPING:</p>
                    <select>
                        <option class="text-muted">Standard Delivery - 4.00 &euro;</option>
                        <option class="text-muted">Next Day Delivery - 8.00 &euro;</option>
                    </select>
                </form>
                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                    <div class="col">TOTAL: </div>
                    <div class="col text-right"> {{totalPrice}} &euro;</div>
                </div>
            </div>
        </div>

    </div>

</section>