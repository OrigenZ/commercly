<section class="container " id="products-list">

  <h2 class="text-center text-muted">Manage products</h2>

  <div class="d-flex justify-content-between">

    <div id="filter-container col-12 col-md-4">
      <div class="create-container">
        <a href="/products/create" class="btn btn-outline-success create-btn "><b>+</b> Add new product</a>
      </div>
      <span class="filter-header" href="#">
        Filter by category
      </span>

      <div class="filters-wrapper">

        {{#each categories}}
        <div class="filter-item">
          <a class="product-filter" href="#">{{name}}</a>
        </div>

        {{/each}}

        <div class="clear-filters">
          <a class="" href="/shop">Reset Filter</a>
        </div>

      </div>

    </div>
    <div class="products-container col-12 col-md-8">

      <div class="products d-flex row justify-content-between gy-4 gx-5">
        {{#each products}}
        <a href="#">
          <div class="product col-sm-12 col-md-4 col-lg-3 card">

            <img src="{{image.path}}" class="w-100" alt="{{name}}" class="card-img-top" />

            <div class="card-body">
              <h3 class="card-text text-center">{{name}}</h3>
              <p class="description card-text text-center">{{brand}}</p>
              <p class="price card-text text-center">{{price}} â‚¬</p>
            </div>

            <div class="card-footer d-flex justify-content-around">
              <a href="/products/edit/{{id}}" class="btn btn-outline-info edit-btn ">Edit</a>
              <a href="/products/delete/{{id}}" class="btn btn-outline-danger delete-btn ">Delete</a>
            </div>

          </div>

        </a>
        {{/each}}
      </div>
    </div>

  </div>


</section>